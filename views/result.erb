<table>
   <tr>
      <th></th>
      <th>Phone Number</th>
      <th>Total Messages</th>
      <th>Received Messages</th>
      <th>Sent Messages</th>
      <th>Recieved/Sent Ratio</th>
      <th>Recieved/Total Ratio </th>
   </tr>
   <% @result.each_with_index do |(id, totals), index| %>
      <tr>
         <td><%= index+1 %></td>
         <td><%= id %></td>
         <td><%= totals[:total] %></td>
         <td><%= totals[:recieved] %></td>
         <td><%= totals[:sent] %></td>
         <td>
            <%=
               if totals[:sent] != 0
                  totals[:recieved].fdiv(totals[:sent])
               else
                  "infinite"
               end
            %>
         </td>
         <td>
            <%=
               totals[:recieved].fdiv(totals[:sent])
            %>
         </td>
      </tr>
   <% end %>
</table>